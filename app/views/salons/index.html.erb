<h1 class="text-center my-4" id="reservation">reservation</h1>
<!-- 月選択 -->
<% month = Date.today %>
<% n_month = Date.today.next_month %>
<select>
  <option value=<%= month.month %>><%= month.month %></option>
  <option value=<%= n_month.month %>><%= n_month.month %></option>
</select>
<!-- 日付選択 -->
<% days = [*month.beginning_of_month.day..month.end_of_month.day] %>
<% today = Date.today %>
<% today = today.day %>
<select>
  <% days.each do |day| %>
    <% if today = day %>
      <option value=<%= day %> selected><%= day %></option>
    <% else %> 
      <option value=<%= day %>><%= day %></option>
    <% end %>
  <% end %>
</select>
<!-- 時間選択 -->
<% hour = [*10..18] %>
<% minute = ["00", "30"] %>
<select>
<% hour.each do |ho| %>
  <% minute.each do |mi| %>
<option value=<%= ho %><%= mi %>><%= ho %>:<%= mi %></option>
  <% end %>
<% end %>
</select>
